# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Admin Configuration (comma-separated list of admin emails)
ADMIN_EMAILS=your-admin-email@example.com

# Stripe Configuration
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
# Featured Business pricing
STRIPE_PRICE_FEATURED_WEEKLY=price_...
STRIPE_PRICE_FEATURED_MONTHLY=price_...
# Family Planner pricing
STRIPE_PRICE_PLANNER_MONTHLY=price_...
STRIPE_PRICE_PLANNER_YEARLY=price_...

# App URL (for redirects)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Elastic Email Configuration (for email sending)
ELASTICEMAIL_API_KEY=your-elasticemail-api-key

# For Supabase Edge Functions, also set this secret:
# supabase secrets set ELASTICEMAIL_API_KEY=your-key
